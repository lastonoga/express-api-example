{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./",
        "baseUrl": "./",
        "outDir": "dist",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["dist"]
}
